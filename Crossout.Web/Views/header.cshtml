@using Crossout.Web
@using Crossout.Web.Models
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Crossout.Web.Models.General.SearchModel>

<div class="navbar-inverse navbar-default navbar-static-top" role="navigation">

    <div class="navbar-header">
        <a class="navbar-brand" rel="home" href="/" title="">@WebSettings.Title</a>
    </div>
    <div class="collapse navbar-collapse navbar-ex1-collapse">
        <div class="social-btns navbar-right navbar-inverse">
            <a class="btn btn-default" href="https://kiwiirc.com/client/irc.kiwiirc.com/?nick=CrossoutDB|?#crossoutdb" target="_blank" role="button" style="vertical-align">
                <i class="glyphicon glyphicon-comment"></i>
            </a>
        </div>
        <div class="col-sm-3 col-md-3 navbar-right">
            <form class="navbar-form" action="/search/" role="search" method="get" id="form">
                <div class="input-group">
                    @if (Model != null)
                    {
                        <input type="text" class="form-control" placeholder="Search" size="30" name="query" id="query" value="@Model.CurrentQuery">
                    }
                    else
                    {
                        <input type="text" class="form-control" placeholder="Search" size="30" name="query" id="query" value="">
                    }

                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        <button class="btn btn-default" type="button" id="reset"><i class="glyphicon glyphicon-remove"></i></button>
                        @*<div class="btn btn-default"><a href="~/admin">Login</a></div>*@
                    </div>
                    @if (Model != null)
                    {
                        <input type="hidden" name="rarity" value="@Model.FilterModel.CurrentRarity.NameUri"/>
                        <input type="hidden" name="category" value="@Model.FilterModel.CurrentCategory.NameUri"/>
                        <input type="hidden" name="faction" value="@Model.FilterModel.CurrentFaction.NameUri" />
                    }
                </div>
            </form>
        </div>
    </div>
</div>