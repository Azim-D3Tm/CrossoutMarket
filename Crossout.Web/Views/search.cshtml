@{
    Layout = "layout.cshtml";
}

@using Crossout.Model.Items
@using Crossout.Web
@using Crossout.Web.Models
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Crossout.Web.Models.SearchModel>


@Html.Partial("header", Model)

@Html.Partial("status", Model.Status)

<div class="container-fluid well">
    <div class="row">
        @Html.Partial("pager", Model)
    </div>
    <div class="row">
        @Html.Partial("filter", Model)
    </div>
</div>

<table id="ItemTable" class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Rarity
            </th>
            <th class="text-right">
                Sell Price
            </th>
            <th class="text-right">
                Sell Offers
            </th>
            <th class="text-right">
                Buy Price
            </th>
            <th class="text-right">
                Buy Orders
            </th>
            <th class="text-right">
                Margin
            </th>
            <th class="text-right">
                Last Update
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (Item item in Model.SearchResult)
        {
            @Html.Partial("itempart", item)
        }
    </tbody>
</table>

<div class="container-fluid well">
    <div class="row">
        @Html.Partial("pager", Model)
    </div>
    <div class="row">
        @Html.Partial("filter", Model)
    </div>
</div>

<script>
    $(document).ready(function () {

        var domOption =
            "<'row'<'col-sm-6'p><'col-sm-6'f>>" +
            "<'row'<'col-sm-12'tr>>" +
            "<'row'<'col-sm-5'p><'col-sm-7'l>>";

        $('#ItemTable').DataTable({
            paging: true,
            searching: true,
            order: [[3, "desc"]],
            lengthMenu: [[10, -1], [10, "All"]],
            pagingType: "full_numbers",
            //dom: '<"top"><"clear">lpt<"bottom">p'
            dom: domOption
        });
    });
</script>
