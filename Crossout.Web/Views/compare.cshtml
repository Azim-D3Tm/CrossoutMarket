@{
    Layout = "layout.cshtml";
}

@using Crossout.Model.Items
@using Crossout.Web
@using Crossout.Web.Models
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Crossout.Model.Items.Item>
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Crossout.Model.Items.ItemCollection>


@Html.Partial("header", Model)

<div class="container-space">
    <div class="panel panel-default">
        <table id="CompareTable" class="table table-striped table-hover table-condensed">
            <thead>
                <tr>
                    <th>
                        
                    </th>
                    @foreach (Item item in Model.Items)
                    {
                        <th>
                            @item.Name
                        </th>
                    }
                </tr>
            </thead>

            <tbody>
                @foreach (Item item in Model.Items)
                {
                    @foreach (Crossout.Data.Stats.Main.SingleStat Stat in item.Stats.SortedStats)
                    {
                        <tr>
                            @Stat.DisplayValue
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {

        $('#CompareTable').DataTable({
            paging: false,
            searching: false,
        });
    });
</script>
